@model FlySneakerFE.Models.MenuDto

<ul class="navbar-nav w-100 justify-content-center">
    <li class="nav-item dropdown">
        <a class="nav-link  dropdown-toggle" href="#" data-bs-toggle="dropdown">  Categorias  </a>
        <ul class="dropdown-menu">
            @foreach (var item in Model.Categorias)
            {
                <li><a class="dropdown-item" href="https://flysneakersbeapi.azurewebsites.net/api/produtos?codigoCategoria=@item.Codigo">@item.Nome</a></li>
            }
        </ul>
    </li>
    <li class="nav-item dropdown">
        <a class="nav-link  dropdown-toggle" href="#" data-bs-toggle="dropdown">  Marcas  </a>
        <ul class="dropdown-menu">
            @foreach (var item in Model.Marcas)
            {
                <li><a class="dropdown-item" href="https://flysneakersbeapi.azurewebsites.net/api/produtos?codigoMarca=1">@item.Nome</a></li>
            }
        </ul>
    </li>
</ul>
