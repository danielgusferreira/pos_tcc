@{
    ViewData["Title"] = "Home Page";

    switch (ViewBag.PerfilUsuario)
    {
        case "1":
            Layout = "~/Views/Shared/_LayoutAdm.cshtml";
            break;
        case "2":
            Layout = "~/Views/Shared/_LayoutAdm.cshtml";
            break;
        case "3":
            Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
            break;
        default:
            //Admin layout
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }

    @model IEnumerable<FlySneakerFE.Models.DadosCarrinhoDto>
}

<form method="post" action="@Url.Action("index", "Carrinho")">
    <div class="container">
        <br />
        <h4>Carrinho de compras</h4>@Html.ActionLink("Continuar comprando", "Index", "Home", null, new { @class = "btn btn-outline-primary text-center" })
        <br />
        @foreach (var item in Model)
        {<div class="row align-items-start">
                <div class="col">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-2">
                                <img style="width: 200px;" class="img-responsive" src="@item.Foto">
                            </div>
                            <div class="col-xs-4">
                                <h4 class="product-name"><strong>@item.Nome</strong></h4>
                            </div>
                            <div class="col-xs-6">
                                <div class="col-xs-6 text-right">
                                    <h6><strong>@item.Valor <span class="text-muted">x</span></strong></h6>
                                </div>
                                <div class="col-xs-4">
                                    <input type="text" class="form-control input-sm" value="@item.Quantidade">
                                </div>
                                <div class="col-xs-2">
                                    <button type="button" class="btn btn-link btn-xs">
                                        <span class="glyphicon glyphicon-trash"> </span>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>

            </div>}
    </div>
    <button class="btn btn-outline-dark flex-shrink-0" type="submit">
        <i class="bi-cart-fill me-1"></i>
        Finalizar Pedido
    </button>
</form>